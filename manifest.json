{
  "manifest_version": 2,
  "name": "QR Code Generator",
  "version": "1.0",
  "description": "Generates a QR code for the current page URL or custom text.",
  "icons": {
    "32": "icons/icon.png"
  },
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "Generate QR Code",
    "default_popup": "popup.html"
  }
}