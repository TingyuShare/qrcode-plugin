{
  "manifest_version": 3,
  "name": "QR Code Generator and Scanner",
  "version": "2.1",
  "description": "Generates or scans a QR code for the current page.",
  "icons": {
    "32": "icons/icon.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "clipboardWrite"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "qrcode-scan@4040940.xyz",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": [ "browsingActivity", "websiteContent", "websiteActivity"],
        "optional": [
          "technicalAndInteraction"
        ]
      }
    }
  },
  "background": {
    "scripts": ["index.min.js", "background.js"]
  },
  "action": {
    "default_icon": "icons/icon.png",
    "default_title": "Generate or Scan QR Code",
    "default_popup": "popup.html"
  }
}